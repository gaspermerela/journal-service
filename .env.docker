# Docker Environment Configuration
# Copy this to .env when deploying with Docker

# Database Configuration
# Use 'localhost' when using host network mode
# Use 'host.docker.internal' if using bridge network
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=journal_user
DATABASE_PASSWORD=password

# Application Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Storage Configuration
# Path inside container (mounted from host)
AUDIO_STORAGE_PATH=/app/data/audio
MAX_FILE_SIZE_MB=100

# CORS Configuration (comma-separated)
CORS_ORIGINS=*

# Worker Configuration
# Set to 1 for single worker, increase based on available CPUs
WORKERS=1

# Database Pool Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Development/Debug
# Set to false in production
DEBUG=false
RELOAD=false
